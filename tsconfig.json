{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    // Workaround for Webstorm Typescript check system
    "outDir": "temp"
  },
  "exclude": [
    "typings/browser",
    "typings/browser.d.ts",
    "node_modules"
  ]
}